@model PBLprojectMVC.Models.UserViewModel

@{
    ViewData["Title"] = "Novo Registro";
}


<div class="center-container">

    <form asp-action="SaveLogin" method="post" class="form-horizontal" style="width:50%">

        <div class="form-horizontal login-boxes">
            <h2 class="title">Novo Registro</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Login</a>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PBLprojectMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PBLprojectMVC.styles.css" asp-append-version="true" />
</head>
<body>

    <header style="background: #00b33c">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DataHopper2-PBL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary mx-1 nav-btn" asp-area="" asp-controller="Home" asp-action="Index">Gráfico Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary mx-1 nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Devices (ainda a construir)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary mx-1 nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">Mais coisas (ainda a construir)</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">


                            @if(ViewBag.UserLogin != true){
                                <a class="nav-link btn btn-success mx-1 nav-btn" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            }
                            else
                            {
                                <a class="nav-link btn btn-success mx-1 nav-btn" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            }

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mb-3">
        <div>
            &copy; 2024 - PBLprojectMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model PBLprojectMVC.Models.DeviceViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registrar Dispositivo";
}

<div class="center-container">

    <form asp-action="Save" method="post" class="form-horizontal" style="width:50%">
        <input type="hidden" name="operation" value="@ViewBag.Operation" />

        <div class="form-horizontal login-boxes">
            <h2 class="title">Registro de Dispositivo</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="Name" class="block text-gray-700 text-sm font-bold mb-2">Nome</label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Type" class="block text-gray-700 text-sm font-bold mb-2">Tipo</label>
                <div class="col-md-10">
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

</div>
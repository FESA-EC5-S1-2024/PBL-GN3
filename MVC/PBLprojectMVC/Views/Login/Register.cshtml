@model PBLprojectMVC.Models.UserViewModel

@{
    ViewData["Title"] = "Novo Registro";
}


<div class="center-container">

    <form asp-action="SaveLogin" method="post" class="form-horizontal" style="width:50%">

        <div class="form-horizontal login-boxes">
            <h2 class="title">Novo Registro</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label col-md-2">Nome</label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TeamId" class="control-label col-md-2">Equipe</label>
                <div class="col-md-10">
                    <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control"></select>
                    <span asp-validation-for="TeamId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label col-md-2">Senha</label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar ao Login</a>
                </div>
            </div>
        </div>
    </form>

</div>

@if (ViewBag.TempData != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Falha de Login',
            text: '@ViewBag.TempData'
        });
    </script>
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
